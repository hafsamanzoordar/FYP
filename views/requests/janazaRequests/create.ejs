<h1>
    Janaza Fund Request Form
</h1>
<div class="janaza-request"></div>
<form action="/requests" method="POST">
    
    <label for="full-name">Full Name</label>
    <input type="text" placeholder="full-name" id="xyz" name="full-name">
    <label for="uni_name">University Name</label>
    <input type="text" id="xyz" name="uni_name">
    <label for="program">Program Name</label>
    <input type="text" id="xyz" name="program">
    <label for="cnic">CNIC No</label>
    <input type="number" id="xyz" name="cnic">
    <label for="age">Age</label>
    <input type="number" id="xyz" name="age">
    <label for="phone">Phone No</label>
    <input type="number" placeholder="phone" id="xyz" name="phone">
    <label for="email">Email</label>
    <input type="text" placeholder="email" id="xyz" name="email">
    <label for="DOB">Date of Birth</label>
    <input type="date" id="xyz" name="DOB">
    <label for="address">Address</label>
    <input type="text" placeholder="address" id="xyz" name="address">
    <select class="gender" name="gender">

        <option name="" value="0" selected>Select gender</option>
                  <option name="gender1" value="1">Male</option>
                  <option name="gender2" value="2">Female</option>
        </select>


    <label for="Fname">Father's Name</label>
    <input type="text" placeholder="Fname" id="xyz" name="Fname">
    <label for="fCnic">CNIC No</label>
    <input type="number" id="xyz" name="fCnic">
    
    <select class="status" name="status">

        <option name="" value="1" selected>Select status</option>
                  <option name="status1" value="1">Alive</option>
                  <option name="status2" value="2">Deceased</option>
    </select>

    <select class="profession" name="profession">

            <option name="" value="2" selected>Select profession</option>
                      <option name="profession1" value="1">Employed</option>
                      <option name="profession2" value="2">Retired</option>
                      <option name="profession3" value="3">Business Owner</option>
    </select>

    <label for="company_name">Company Name</label>
    <input type="text" placeholder="company_name" id="xyz" name="company_name">
    <label for="occupation">Occupation</label>
    <input type="text" placeholder="occupation" id="xyz" name="occupation">
    <label for="designation">Designation</label>
    <input type="text" placeholder="designation" id="xyz" name="designation">
    <label for="gross_monthly_income">Gross monthly income</label>
    <input type="number" id="xyz" name="gross_monthly_income">

    <label for="matric_year">Matric Completion Year</label>
    <input type="number" id="xyz" name="matric_year">
    <label for="matric_institute">Matric Institute Name</label>
    <input type="text" placeholder="matric_institute" id="xyz" name="matric_institute">
    <label for="matric_percentage">Matric Percentage</label>
    <input type="number" id="xyz" name="matric_percentage">

    <select class="matric_type" name="matric_type">

        <option name="" value="3" selected>Select Matric Institute type</option>
                  <option name="matric_type1" value="1">Government</option>
                  <option name="matric_type2" value="2">Private</option>
    </select>

    <label for="matric_expenses">Matric Expenses</label>
    <input type="number" id="xyz" name="matric_expenses">


    <label for="intermediate_year">Intermediate Completion Year</label>
    <input type="number" id="xyz" name="intermediate_year">
    <label for="intermediate_institute">Intermediate Institute Name</label>
    <input type="text" placeholder="intermediate_institute" id="xyz" name="intermediate_institute">
    <label for="intermediate_percentage">Intermediate Percentage</label>
    <input type="number" id="xyz" name="intermediate_percentage">
 
    <select class="intermediate_type" name="intermediate_type"></select>    
    <option name="" value="4" selected>Select Intermediate Institute type</option>
                  <option name="intermediate_type1" value="1">Government</option>
                  <option name="intermediate_type2" value="2">Private</option>
    </select>

    <label for="intermediate_expenses">Intermediate Expenses</label>
    <input type="number" id="xyz" name="intermediate_expenses">

    <label for="family_members">Family Members</label>
    <input type="number" id="xyz" name="family_members">
    <label for="earning_hands">Earning hands</label>
    <input type="number" id="xyz" name="earning_hands">
    <label for="studying_siblings">Studying Siblings</label>
    <input type="number" id="xyz" name="studying_siblings">
    <label for="total_expenditure">Total Expenditure</label>
    <input type="number" id="xyz" name="total_expenditure">
    <label for="total_monthly_income">Total monthly income</label>
    <input type="number" id="xyz" name="total_monthly_income">

    <select class="property_type" name="property_type"></select>    
    <option name="" value="5" selected>Select Property type</option>
                  <option name="property_type1" value="1">Owned</option>
                  <option name="property_type2" value="2">Rental</option>
    </select>

    <button>Submit</button>
</form>
</div>
<ul>
    <li><a href="/">Home</a></li>
    <li><a href="/SignUp">Sign Up</a></li>
</ul>
